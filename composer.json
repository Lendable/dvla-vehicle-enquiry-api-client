{
    "name": "lendable/dvla-vehicle-enquiry-api-client",
    "description": "API client for the DVLA's Vehicle Enquiry Service API",
    "keywords": ["DVLA", "DVLA Vehicle Enquiry Service"],
    "homepage": "https://www.lendable.co.uk",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Lendable Ltd",
            "email": "dev@lendable.co.uk",
            "homepage": "https://www.lendable.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lendable\\Dvla\\VehicleEnquiry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\Lendable\\Dvla\\VehicleEnquiry\\": "tests/Unit/",
            "Tests\\Functional\\Lendable\\Dvla\\VehicleEnquiry\\": "tests/Functional/",
            "Tests\\Integration\\Lendable\\Dvla\\VehicleEnquiry\\": "tests/Integration/"
        }
    },
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "beberlei/assert": "^3.2",
        "nyholm/psr7": "^1.2",
        "paragonie/hidden-string": "^1.0 || ^2.0",
        "psr/http-client": "^1.0.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.14"
    },

    "scripts": {
        "code-style:check": [
            "bin/php-cs-fixer fix --config='./tools/php-cs-fixer/config.php' --show-progress=none --dry-run --no-interaction --diff -v --using-cache=no"
        ],
        "code-style:fix": [
            "bin/php-cs-fixer fix --config='./tools/php-cs-fixer/config.php' --show-progress=none --no-interaction --diff -v"
        ],
        "security:check": [
            "@composer audit"
        ],
        "static-analysis": [
            "bin/phpstan analyse src/ tests/ --configuration=./tools/phpstan/phpstan.neon --ansi"
        ],
        "lint:source": [
            "parallel-lint src"
        ],
        "lint:tests": [
            "parallel-lint tests"
        ],
        "lint:all": [
            "@lint:source",
            "@lint:tests"
        ],
        "test:all": [
            "@test:unit",
            "@test:functional",
            "@test:integration"
        ],
        "test:unit": [
            "bin/phpunit --colors --do-not-cache-result --testsuite=unit"
        ],
        "test:functional": [
            "bin/phpunit --colors --do-not-cache-result --testsuite=functional"
        ],
        "test:integration": [
            "bin/phpunit --colors --do-not-cache-result --testsuite=integration"
        ],
        "rector:check": [
            "rector --dry-run --ansi --no-progress-bar"
        ],
        "rector:fix": [
            "rector --ansi --no-progress-bar"
        ],
        "ci": [
            "@lint:all",
            "@code-style:check",
            "@security:check",
            "@static-analysis",
            "@rector:check",
            "@test:all"
        ],
        "run-ci": [
            "ci/run.sh"
        ]
    },

    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "platform": {
            "php": "7.4.28"
        }
    },
    "prefer-stable": true
}
