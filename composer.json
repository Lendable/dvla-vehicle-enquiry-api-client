{
    "name": "lendable/dvla-vehicle-enquiry-api-client",
    "description": "API client for the DVLA's Vehicle Enquiry Service API",
    "keywords": ["DVLA", "DVLA Vehicle Enquiry Service"],
    "homepage": "https://www.lendable.co.uk",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Lendable Ltd",
            "email": "dev@lendable.co.uk",
            "homepage": "https://www.lendable.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lendable\\Dvla\\VehicleEnquiry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\Lendable\\Dvla\\VehicleEnquiry\\": "tests/Unit/",
            "Tests\\Functional\\Lendable\\Dvla\\VehicleEnquiry\\": "tests/Functional/",
            "Tests\\Integration\\Lendable\\Dvla\\VehicleEnquiry\\": "tests/Integration/"
        }
    },
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "beberlei/assert": "^3.2",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "paragonie/hidden-string": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-beberlei-assert": "^0.12",
        "phpstan/phpstan-deprecation-rules": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^9.5",
        "slam/phpstan-extensions": "^5.0"
    },

    "scripts": {
        "check-code-style": [
            "bin/php-cs-fixer fix --config='./tools/php-cs-fixer/config.php' --show-progress=none --dry-run --no-interaction --diff -v"
        ],
        "check-security": [
            "bin/local-php-security-checker"
        ],
        "fix-code-style": [
            "bin/php-cs-fixer fix --config='./tools/php-cs-fixer/config.php' --show-progress=none --no-interaction --diff -v"
        ],
        "run-static-analysis": [
            "bin/phpstan analyse src/ tests/ --configuration=./tools/phpstan/phpstan.neon --ansi"
        ],
        "run-tests": [
            "@run-unit-tests",
            "@run-functional-tests",
            "@run-integration-tests"
        ],
        "run-unit-tests": [
            "bin/phpunit tests/Unit/"
        ],
        "run-functional-tests": [
            "bin/phpunit tests/Functional/"
        ],
        "run-integration-tests": [
            "bin/phpunit tests/Integration/"
        ]
    },

    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "prefer-stable": true
}
